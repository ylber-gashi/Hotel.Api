@{
    ViewData["Title"] = "Login";
}
@model Hotel.Api.Application.Common.Models.LoginModel

<div class="login-container">
    <div class="myCard">
        <div class="row">
            <div class="col-md-6">
                <div class="myLeftCtn">
                    <form class="myForm text-center" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <header>Sign In</header>
                        <div class="form-group">
                            <i class="fas fa-user"></i>
                            <input class="myInput" asp-for="Email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <i class="fas fa-envelope"></i>
                            <input class="myInput" asp-for="Password" placeholder="Password">
                        </div>
                        <input type="submit" class="butt" value="Login">
                    </form>
                    <div class="mt-5 text-center">
                        <a class="m-auto" href="/Account/register">Don't have an account? Register</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="myRightCtn">
                    <img src="https://www.mcicon.com/wp-content/uploads/2020/12/Architecture_Hotel_1-copy-15.jpg"
                        id="register-logo" alt="Hotel Logo">
                </div>
            </div>
        </div>
    </div>
</div>