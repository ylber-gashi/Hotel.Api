@using Hotel.Api.Application.Common.Models.RoomModels
@inject UserManager<User> userManager;
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@model RoomCreateModel
<div class="shadow-sm mb-5">
    <div class="d-sm-flex justify-content-between align-items-center p-3 gradient-primary">
        <h3>Add Room</h3>
        <a href="/dashboard"><button class="btn btn-light shadow">Dashboard</button></a>
    </div>
    <div id="content">
        <div class="col">
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <p class="text-primary m-0 font-weight-bold">Room Info</p>
                </div>
                <div class="card-body">
                    <form method="POST" asp-action="AddRoom" asp-controller="Rooms">
                        <div class="form-row">
                            <div class="col">
                                <span asp-validation-for="RoomNumber" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="RoomNumber">
                                        <strong>
                                            Room Number
                                        </strong>
                                    </label><input class="form-control" asp-for="RoomNumber"
                                                   placeholder="Room Number">
                                </div>
                            </div>
                            <div class="col">
                                <span asp-validation-for="FloorNumber" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="FloorNumber"><strong>Floor Number</strong></label><input class="form-control" asp-for="FloorNumber" placeholder="Floor number">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <span asp-validation-for="RoomType" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="RoomType"><strong>Room Type</strong></label><br>
                                    <select class="form-select" asp-for="RoomType"
                                            aria-label="Default select example">
                                        <option value="0">Normal</option>
                                        <option value="1">VIP</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col">
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="Capacity"><strong>Capacity</strong></label><input class="form-control" asp-for="Capacity" placeholder="Capacity">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <span asp-validation-for="Price" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="Price"><strong>Price</strong></label><input class="form-control" asp-for="Price" placeholder="Price">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <span asp-validation-for="FirstImage" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="FirstImage"><strong>First Image URL</strong></label><input class="form-control" asp-for="FirstImage" placeholder="Add first image URL here">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary shadow" type="submit">
                                Add Room
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
